<% if(locals.lastVisit){ %>
    <div class="alert alert-primary" role="alert">
        your last visist is :   <%= locals.lastVisit %>
    </div>
<% } %>


<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Book image</th>
            <th scope="col">Actions</th>


        </tr>
    </thead>
    <tbody>

        <% products.forEach(product=>{ %>
            <tr>
                <th>
                    <%= product.id %>
                </th>
                <td>
                    <%=product.name %>
                </td>
                <td>
                    <%=product.description %>
                </td>
                <td scope="col">
                    <%=product.price %>
                </td>
                <td>
                    <img src="<%= product.imageUrl %>" style="width: 40px;">
                </td>
                <td>
                    <a href="/update_product/<%= product.id %>" class="btn btn-warning">update</a>
                    <a href="/delete-product/<%= product.id %>" class="btn btn-danger">delete</a>
                </td>


            </tr>
            <% }) %>



    </tbody>
</table>